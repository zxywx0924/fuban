/**index.wxss**/
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0;
  box-sizing: border-box;
}

.chat-container {
  flex: 1;
  width: 100%;
  overflow: hidden;
  padding: 10px;
  box-sizing: border-box;
}

.chat-list {
  height: 100%;
  width: 100%;
}

.message {
  display: flex;
  margin-bottom: 15px;
  align-items: flex-start;
}

.message.user {
  flex-direction: row-reverse;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 20px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 14px;
  margin: 0 8px;
}

.user-avatar {
  background-color: #1aad19;
}

.assistant-avatar {
  background-color: #576b95;
}

.content {
  background-color: #f1f1f1;
  padding: 10px 15px;
  border-radius: 15px;
  max-width: 70%;
  font-size: 16px;
  line-height: 1.5;
  word-wrap: break-word;
}

.message.user .content {
  background-color: #07C160;
  color: white;
}

.input-container {
  display: flex;
  padding: 10px;
  border-top: 1px solid #eee;
  background-color: #f9f9f9;
  width: 100%;
  box-sizing: border-box;
}

.text-input {
  flex: 1;
  height: 40px;
  border: 1px solid #ddd;
  border-radius: 4px;
  padding: 0 10px;
  font-size: 16px;
  background: white;
}

.send-button {
  width: 60px;
  height: 40px;
  margin-left: 10px;
  padding: 0;
  line-height: 40px;
  font-size: 14px;
  background: #07C160;
  color: white;
}

.voice-button {
  width: 110px;
  height: 40px;
  margin-left: 10px;
  padding: 0;
  line-height: 40px;
  font-size: 14px;
  background: #576b95;
  color: white;
}