/**app.wxss**/
page {
  height: 100%;
  font-size: 16px;
  line-height: 1.6;
  background-color: #F8F8F8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  padding: 0;
  margin: 0;
}

/* 老年人友好的通用样式 */
.text-large {
  font-size: 18px;
}

.text-xl {
  font-size: 20px;
}

.text-xxl {
  font-size: 22px;
}

.high-contrast {
  color: #000000;
  background-color: #FFFFFF;
}

/* 确保按钮足够大，便于点击 */
button {
  min-height: 88rpx;
  line-height: 88rpx;
  font-size: 16px;
}

/* 去除按钮默认边框 */
button::after {
  border: none;
}

/* 禁用状态样式 */
.disabled {
  opacity: 0.6;
}

/* 加载动画 */
.loading {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}